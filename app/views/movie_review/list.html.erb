<% if @movie_reviews.blank? %>
<p>There are not any reviews currently in the system.</p>
<% else %>
<p>These are the current reviews in our system</p>

<ul id = "movie_reviews">
   <% @movie_reviews.each do |c| %>
   <li><%= link_to c.movie_id, {:action => 'show', :id => c.id} -%></li>
   <% end %>
</ul>

<% end %>